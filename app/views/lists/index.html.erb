<div class= "container">

  <div>
    <h2>My lists of movies</h2>
  
    <%= link_to "New List", new_list_path %>
  </div>

  <div>
    <ul>
      <% @lists.each do |list| %>
          <% if list.photo.attached? %>
            <div class= "card-category" style="background-image: url(<%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>)">
              <%= link_to list.name, list_path(list) %>
            </div>
          <% end %>
      <% end %>
    </ul>
  </div>

</div>
