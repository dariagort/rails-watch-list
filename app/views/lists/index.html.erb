<div>
  <%= render 'shared/banner' %>
</div>

<div class= "container">
  <div  class="cards">
    <div class="card-category">
      <%= link_to "+", new_list_path, class: "card" %>
    </div>
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <%= link_to list_path(list) do %>
          <div class="card-category" style="background-image: url(<%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>)">
            <%= list.name %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

