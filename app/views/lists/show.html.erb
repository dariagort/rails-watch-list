<h2><%= @list.name %></h2>


<div>
 <%= @list.bookmarks.each do |bookmark| %>
    <li><%= image_tag bookmark.movie.poster_url %></li>
    <li><%= bookmark.comment %></li>
 <% end %>
</div>

<%= link_to "Delete list",
  list_path(@list),
  data: {turbo_method: :delete , turbo_confirm: "Are you sure?"}
  %>
<%= link_to "Back to My Lists", lists_path %>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>
